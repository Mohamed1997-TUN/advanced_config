config firewall policy
    edit 0
        set name "{{ policy.name }}"
        set srcintf "{{ policy.srcintf }}"
        set dstintf "{{ policy.dstintf }}"
        set srcaddr "{{ policy.srcaddr }}"  # Corrected this line
        set dstaddr "{{ policy.dstaddr }}"  # Corrected this line
        set action "{{ policy.policy_action }}"  # Also corrected to use 'policy_action'
        set service {{ policy.service | join(" ") }}
        set schedule "{{ policy.schedule }}"
        set nat "{{ policy.nat }}"
    next
end


